   </key>

  </help>

 </sim>


 <controls>
  <engines>
   <engine n="0">
    <magnetos>3</magnetos>
    <propeller-pitch>1.0</propeller-pitch>
    <mixture>1.0</mixture>
   </engine>
  </engines>
  <lighting>
   <instruments-norm>0.3</instruments-norm>
  </lighting>
  <flight>
   <flaps>0</flaps>
   <rudder-trim>0</rudder-trim>
   <aileron-trim>0.10</aileron-trim>
   <elevator-trim>-0.12</elevator-trim>
  </flight>
  <armament>
   <gunsight>
    <power-on type="bool">false</power-on>
    <intensity type="double">0.3</intensity>
   </gunsight>
  </armament>
  <gear>
    <brake-parking type="double">1.0</brake-parking>
