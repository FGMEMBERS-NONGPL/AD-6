<PropertyList>

 <sim>

  <description>Douglas AD-6 Skyraider</description>
 
  <flight-model>jsb</flight-model>
  <aero>JSBSim</aero>

  <startup>
   <splash-texture>Aircraft/AD-6/splash.png</splash-texture>
  </startup>
  
  <sound>
   <audible>true</audible>
   <path>Aircraft/AD-6/Sounds/sound-config.xml</path>
   <volume type="double">0.26</volume>
   <flap-volume>0.2</flap-volume>
   <gear-volume>0.9</gear-volume>
   <canopy-volume>1.0</canopy-volume>
  </sound>

  <submodels> 
    <serviceable type="bool">true</serviceable>
    <path>Aircraft/AD-6/submodels.xml</path>
  </submodels>

  <virtual-cockpit archive="y">true</virtual-cockpit>
  <allow-toggle-cockpit archive="y">false</allow-toggle-cockpit>

  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <pitch-offset-deg>-4.0</pitch-offset-deg>
    <x-offset-m archive="y">0.0</x-offset-m><!-- right/left -->
    <y-offset-m archive="y">1.4</y-offset-m><!-- up/down -->
    <z-offset-m archive="y">-0.38</z-offset-m><!-- aft/fore -->
   </config>
  </view>

  <model>
   <path>Aircraft/AD-6/Models/AD-6.xml</path>
  </model>

  <chase-distance-m>-18</chase-distance-m>

  <flaps>
   <setting>0.000</setting>
   <setting>0.500</setting> 
   <setting>1.000</setting> 
  </flaps>

  <help>
   <title>AD-6 Skyraider</title>
   <key>
    <name>l (lower case L) </name>
    <desc>Launch-bar-engage</desc>
   </key>
   <key>
    <name>C (shift-C) </name>
    <desc>Fire catapult</desc>
   </key>
   <key>
    <name>n (lower case n)</name>
    <desc>toggle tail hook</desc>
   </key>
   <key>
    <name>m (lower case m) </name>
    <desc>Tail wheel steering</desc>
   </key>
   <key>
    <name>c (lower case c) </name>
    <desc>Toggle canopy</desc>
   </key>
   <key>
    <name>Shift-F </name>
    <desc>Toggle wing fold</desc>
   </key>
   <key>
    <name>Shift-Q </name>
    <desc>Toggle magnetos</desc>
   </key>
   <key>
    <name>e (lower case e)</name>
    <desc>Release selected stores</desc>
   </key>
   <key>
    <name>1 </name>
    <desc>Select Stations 1 and 15, deselect others</desc>
   </key>
   <key>
    <name>2 </name>
    <desc>Select Station 2 and 14, deselect others</desc>
   </key>
   <key>
    <name>3 </name>
    <desc>Select Station 3 and 13, deselect others</desc>
   </key>
   <key>
    <name>4 </name>
