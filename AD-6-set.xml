   </key>
   <key>
    <name>5 </name>
    <desc>Select Station 5 and 11, deselect others</desc>
   </key>
   <key>
    <name>6 </name>
    <desc>Select Station 6 and 10, deselect others</desc>
   </key>
   <key>
    <name>7 </name>
    <desc>Select Station 7 and 9, deselect others</desc>
   </key>
   <key>
    <name>8 </name>
    <desc>Select Station 8, deselect others</desc>
   </key>

   <key>
    <name>Shift 1 </name>
    <desc>Select Stations 1 and 15</desc>
   </key>
   <key>
    <name>Shift 2 </name>
    <desc>Select Stations 2 and 14</desc>
   </key>
